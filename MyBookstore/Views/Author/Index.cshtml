@model IEnumerable<MyBookstore.Models.AuthorModels>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="tblAuthor" class="table">
    <thead>
        <th>
            @Html.DisplayNameFor(model => model.LN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zip)
        </th>
        <th></th>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Author", new { id=item.ID })" class="btn btn-xs btn-info">
                    <i class='fa fa-edit'></i>
                </a>
                <a href="@Url.Action("Delete", "Author", new { id=item.ID })" class="btn btn-xs btn-danger" onclick='return confirm ("Are you sure?");'>
                    <i class='fa fa-trash'></i>
                </a>
            </td>
        </tr>
    }

</table>
<script>
    $(document).ready(function () {
        $('#tblAuthor').DataTable();
    });
</script>
